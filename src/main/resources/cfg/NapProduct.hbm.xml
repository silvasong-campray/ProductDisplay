<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.product.dto">
	<class name="NapProduct">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="pid"></property>
		<property name="name"></property>
		<property name="price"></property>
		<property name="brand"></property>
		<property name="category"></property>
		<property name="url"></property>
		<property name="image" length="1000"></property>
		<property name="description" length="1000"></property>
		<property name="createtime" type="java.lang.Long"></property>
	</class>

</hibernate-mapping>